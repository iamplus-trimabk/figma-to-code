{
  "optimizations": {
    "bundle_analyzer": {
      "name": "Bundle Analyzer",
      "description": "Webpack bundle analysis",
      "install_command": "npm install -D @statoscope/webpack-plugin",
      "config_files": ["vite.config.ts", "scripts/analyze.js"],
      "enabled": false
    },
    "lazy_loading": {
      "name": "Lazy Loading",
      "description": "Route and component lazy loading",
      "install_command": "",
      "config_files": ["src/router/lazy-routes.tsx"],
      "enabled": true
    },
    "image_optimization": {
      "name": "Image Optimization",
      "description": "Automatic image optimization",
      "install_command": "npm install -D vite-plugin-imagemin",
      "config_files": ["vite.config.ts"],
      "enabled": false
    }
  },
  "monitoring": {
    "web_vitals": {
      "name": "Web Vitals",
      "description": "Core web vitals monitoring",
      "install_command": "npm install web-vitals",
      "config_files": ["src/lib/monitoring/web-vitals.ts"],
      "enabled": true
    },
    "error_tracking": {
      "name": "Error Tracking",
      "description": "JavaScript error monitoring",
      "install_command": "npm install @sentry/react",
      "config_files": ["src/lib/monitoring/sentry.ts"],
      "enabled": false
    }
  },
  "caching": {
    "service_worker": {
      "name": "Service Worker",
      "description": "Offline support and caching",
      "install_command": "npm install -D vite-plugin-pwa",
      "config_files": ["vite.config.ts", "public/sw.js", "src/lib/pwa/register.ts"],
      "enabled": false
    },
    "browser_cache": {
      "name": "Browser Cache",
      "description": "Browser-level caching strategies",
      "install_command": "",
      "config_files": ["src/lib/cache/strategies.ts"],
      "enabled": true
    }
  }
}